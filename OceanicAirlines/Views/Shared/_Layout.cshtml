<!DOCTYPE html>
@using Microsoft.AspNet.Identity
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Oceanic Airlines</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @if (Request.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Search For Route", "SearchRoute", "SearchRoute")</li>
                        <li>@Html.ActionLink("City", "Index", "City")</li>
                        <li>@Html.ActionLink("Route", "Index", "Route")</li>
                    </ul>
                }
                @Html.Partial("_LoginPartial")
                <div style="text-align: right">
                    <a href="@Url.Action("Index", "Home", null)">
                        <img src="~/Content/Images/large-logo.png" style="vertical-align: middle; text-align:right; width: 100px; margin: 10px 10px; ">
                        <a />
                </div>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p style="text-align:center">&copy; @DateTime.Now.Year   -   Oceanic Airlines   -   55 43 22 33   -   contact@oceanicairlines.com </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
