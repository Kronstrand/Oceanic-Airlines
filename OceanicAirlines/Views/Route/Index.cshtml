@model IEnumerable<OceanicAirlines.Models.Route>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Origin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TransportationMethod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Timespan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Available)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <th>
        @Html.DisplayFor(model => item.Origin.Name)
    </th>
    <th>
        @Html.DisplayFor(model => item.Destination.Name)
    </th>
    <td>
        @Html.DisplayFor(modelItem => item.TransportationMethod.Company)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Timespan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Available)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.RouteID })
    </td>
</tr>
}

</table>
